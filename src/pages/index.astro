---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { SITE_TITLE } from '../consts';

const SITE_DESCRIPTION = `Ciao ヾ(＾∇＾), I'm Daniele Salvagni, a Software Engineer located by the picturesque Como Lake in Italy. I'm passionate about programming and also have interests in electronics and UX design. I build new stuff whenever I feel like it.`;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />

    <main class="prose">
      <p>
        Ciao ヾ(＾∇＾), I'm <b>Daniele Salvagni</b>, a Software Engineer located
        by the picturesque Como Lake in Italy. I'm passionate about programming
        and also have interests in electronics and UX design. I build new stuff
        whenever I feel like it.
      </p>
      <p>
        I currently work at Claranet Switzerland <span class="flag">
          <svg
            width="0.75em"
            height="0.75em"
            viewBox="0 0 32 32"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="m0 0h32v32h-32z" fill="#da291c"></path>
            <path d="m13 6h6v7h7v6h-7v7h-6v-7h-7v-6h7z" fill="#fff"></path>
          </svg></span
        >
        where I primarily focus on the development of cloud applications on <abbr
          title="Amazon Web Services">AWS</abbr
        >
        for which I am a certified <abbr
          title="designing and implementing reliable and scalable cloud architectures"
          >Solutions Architect</abbr
        > and <abbr title="creating cloud-native applications">Developer</abbr>.
      </p>
      <p>
        You can find me on <a
          href="https://github.com/daniele-salvagni/"
          target="_blank">Github</a
        > or send me a message at dan@salvagni.io.
      </p>
      <!-- concatenating br's like it's 1999 -->
      <br /><br />
      <div id="duck" style="text-align: center; position: relative;">
        <img src="/img/duck.png" alt="duck" width="55px" />
        <span class="quack">Quack!</span>
      </div>
    </main>

    <Footer />

    <style>
      #duck {
        position: relative;
        text-align: center;
        margin: 0 auto;
      }
      .quack {
        position: absolute;
        top: -15px;
        left: 44%;
        visibility: hidden;
        opacity: 0;
        transition: ease-in-out 0.2s;
        font-size: 0.8em;
        background-color: #fafafa;
        border-radius: 7px;
        padding: 1px 6px;
      }
      #duck:hover .quack {
        visibility: visible;
        opacity: 1;
      }
    </style>
  </body>
</html>
