---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <div class="logo">
      <a href="/"><img src="/img/logo.svg" alt={SITE_TITLE} /></a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">home</HeaderLink><span class="separator"> /</span>
      <HeaderLink href="/b">articles</HeaderLink><span class="separator">
        /</span
      >
      <HeaderLink href="/s">software</HeaderLink><span class="separator">
        /</span
      >
      <HeaderLink href="/n">notes</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 2rem 0 0;
  }
  .logo {
    padding: 2em 0;
  }
  .logo a,
  .logo a:hover {
    display: block;
    max-width: 2.64rem;
    margin: 0 auto;
    background: none;
  }
  .logo img {
    display: block;
    border-radius: 0;
    transition: ease-in 0.15s;
    animation: dropShadow 6s ease-in infinite;
  }
  .logo img:hover {
    filter: drop-shadow(3px 2px 0px magenta) drop-shadow(-3px -2px 0px cyan) !important;
  }

  /* animate the drop shadow filter every few seconds */
  @keyframes dropShadow {
    0% {
      filter: none;
    }
    20% {
      filter: drop-shadow(3px 2px 0px magenta) drop-shadow(-3px -2px 0px cyan);
    }
    30% {
      filter: none;
    }
  }

  .separator {
    color: #d7cccc;
  }

  .internal-links {
    text-align: center;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    margin-left: -1px;
  }

  .internal-links a {
    padding: 0 0.7em;
    margin: 0 0.5em;
    text-transform: uppercase;
  }

  .internal-links a:hover {
    background: linear-gradient(90deg, magenta 0%, cyan 100%);
    background-clip: text;
    -webkit-background-clip: text;
    color: rgba(0, 0, 0, 0);
    animation: rainbow 2s ease-in-out infinite;
    background-size: 200% 200%;
    font-weight: 700;
  }

  nav {
    font-family: 'Inconsolata', sans-serif;
    font-family: var(--ff-mono);
    font-size: var(--fs-mono);
    position: relative;
    overflow: hidden;
  }

  /* @media (max-width: 480px) {
    .internal-links {
      justify-content: space-between;
    }
  } */
</style>
